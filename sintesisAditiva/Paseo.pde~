class Paseo{
  int pan; //tambien nos ayudara a la posicion en pantalla
  float amp; //este es para la s√≠ntesis aditiva
  float vol;
  Paseo(){
    pan = 0;
    amp = 0.0;
    
  }
  
  
  float step(){
    int choice = int (random(2));
        
   vol = noise(amp);
     println(vol*255+" "+vol);
    if (choice == 0){
      
      amp ++;
    }
    
    if (choice == 1){
      
      amp --;
    }
    
    return vol;

}
   
    int step1(){
    int choice = int (random(2));
   
  
    
    if (choice == 0){
      pan = 1;
      stroke(0,vol*300,vol*300);
      strokeWeight(vol*10);
     
    
    }
    
    if (choice == 1){
      pan = -1;
      //fill(255,vol*255,0);
      
      
    }
    
//    if (choice == 2){
//      //fill(0,vol*255,255,vol*255);
//      
//      pan = 0;
//      
//    }
    line(map(pan,-1,1,200,500),0,map(pan,-1,1,200,500),height);
    
    return pan;
}
     
  
}//EOC
